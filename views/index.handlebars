
<h1>Burgers!</h1>

<h2>Burgers to Eat!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>{{this.burger_name}}<button type="submit" class="change-devoured" data-id={{this.id}}>Eat Me!</button></li>
      <br>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>
      <br>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
